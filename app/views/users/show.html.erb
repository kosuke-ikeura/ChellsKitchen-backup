<div class="wrapper">
    <div class="resistration-wrapper">
        <h2>
            マイページ
        </h2>
        <div class="form-wrapper">
            <div class="mypage-flavors">
                <table class="form-table">
                    <tbody>
                    <% @flavors.each do |flavor| %>
                        <tr>
                            <th><%= flavor.name %></th>
                            <td><%= flavor.purchase_price %>円</td>
                        </tr>
                    <% end %>
                    </tbody>
                </table>
                <div class="total-reseat">
                    <p class="price-all">合計: <%= @flavors.all.sum(:purchase_price) %>円</p>
                    <%= link_to "レシート一覧", image_user_path(current_user), class: "images_link"%>
                </div>
                <div class="empty">
                    <%= paginate(@flavors) %>
                </div>
            </div>
        </div>
    </div>
</div>
